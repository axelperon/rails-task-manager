<h1> <%= "TASK"  %></h1>


 <ul>

    <% @tasks.each do |task| %>

       <li class="tasklist" >
        <% if task.completed %>
          <%= link_to undone_path(task), data: {turbo_method: "patch"}, class:"btn" do %>
            <i class="fa-solid fa-square-check"></i>

          <% end %>

        <% else %>
          <%= link_to done_path(task), data: {turbo_method: "patch"}, class:"btn" do %>

            <i class="fa-solid fa-square"></i>
          <% end %>

        <% end %>
        <%= link_to  "#{task.title} ",task_path(task), class:"btn"%>
        <%= link_to task_path(task), data: {turbo_method:"delete", turbo_confirm: "are you sure?"} do %>
        <i class="fa-solid fa-trash"></i>
        <% end %>
        </li>

    <% end %>


  <%=link_to "add new task", tasks_new_path %>

 </ul>
